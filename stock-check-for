# Script to curl a list of urls and check for whether the item is in stock
# If it is in stock then an email will be sent

#!/bin/bash

cat /dev/null > /tmp/stock-result
for i in $(cat ~/just-a-repo/stock-list); do curl -s $i | egrep -e 'InStock| in-stock|instock' > /dev/null 2>&1

if [ $? -eq 0 ]
then
        echo "$i in stock" at $(date) >> /tmp/stock-result
#       echo "$i in stock" | mail -s "Item in stock" notarealaddress_5445ffeef@gmail.com
else
        echo "$i not in stock" at $(date) >> /tmp/stock-result
fi;
done
